<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>フォロー数: <%= user.followings.count %></th>
  </tr>
  <tr>
    <th>フォロワー数: <%= user.followers.count %></th>
  </tr>
  <tr>
    <th>
　  <% if current_user.following?(user) %>
      <%= link_to 'フォロー外す', user_relationships_path(user.id), class: "btn btn-danger", method: :delete %>
    <% else %>  
      <%= link_to 'フォローする', user_relationships_path(user.id), class: "btn btn-success", method: :post %>
    <% end %>
    </th>
  </tr>
</table>
<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>